{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 650,
  "height": 350,
  "title": {
    "text": "Malaysia Socioeconomic Indicator by State (2022)",
    "font": "Bree Serif",
    "fontSize": 22,
    "anchor": "middle",
    "dy": 10
  },
  "padding": {"left": 0, "right": 0, "top": 0, "bottom": 20},
  "projection": {
    "type": "mercator",
    "center": [110, 3],
    "scale": 1870,
    "translate": [345, 220]
  },
  "params": [
    {
      "name": "indicator",
      "value": "income_mean",
      "bind": {
        "input": "select",
        "options": ["income_mean", "expenditure_mean", "poverty"],
        "labels": ["Mean Income", "Mean Expenditure", "Poverty Rate"],
        "name": "Select Indicator: "
      }
    }
  ],
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#8ccaf4"}
    },
    {
      "data": {"graticule": {"step": [1, 1]}},
      "mark": {
        "type": "geoshape",
        "stroke": "#a1a1a1",
        "strokeWidth": 0.8,
        "opacity": 0.8
      }
    },
    {
      "data": {
        "url": "https://xuenhan.github.io/FIT3179_Homework9/output.json",
        "format": {"type": "topojson", "feature": "my (1)"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://xuenhan.github.io/FIT3179_Homework9/hies_state_normalized.csv"
            },
            "key": "state",
            "fields": ["income_mean", "expenditure_mean", "poverty"]
          }
        },
        {
          "fold": ["income_mean", "expenditure_mean", "poverty"],
          "as": ["indicator_field", "indicator_value"]
        },
        {"filter": "datum.indicator_field == indicator"},
        {
          "calculate": "indicator == 'income_mean' ? 'Mean Income (RM)' : indicator == 'expenditure_mean' ? 'Mean Expenditure (RM)' : 'Poverty Rate (%)'",
          "as": "tooltipLabel"
        },
        {
          "calculate": "format(datum.indicator_value, '.2f')",
          "as": "tooltipValue"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#555555", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "indicator_value",
          "type": "quantitative",
          "title": null,
          "scale": {
            "type": "quantile",
            "range": ["#E3E0F5", "#CCC6EB", "#B0A6DF", "#8F89C9", "#6C67A3"]
          },
          "legend": {
            "orient": "right",
            "offset": 10,
            "titleFontSize": 12,
            "labelFontSize": 10,
            "titleFontWeight": "bold",
            "titleFont": "Bree Serif",
            "labelFont": "Sora"
          }
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "tooltipLabel", "title": "Indicator"},
          {"field": "tooltipValue", "title": "Value (Normalised)"}
        ]
      }
    },
    {
      "data": {"values": [{}]},
      "transform": [
        {
          "calculate": "indicator == 'income_mean' ? 'Mean Income (RM)' : indicator == 'expenditure_mean' ? 'Mean Expenditure (RM)' : 'Poverty Rate (%)'",
          "as": "legendTitle"
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 12,
        "font": "Sora",
        "fontWeight": "bold",
        "align": "left"
      },
      "encoding": {
        "x": {"value": 660},
        "y": {"value": -10},
        "text": {"field": "legendTitle"}
      }
    },
    {
      "data": {
        "values": [
          {
            "lon": 104.5,
            "lat": 4.5,
            "label": "Urban hub, highest income"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": 0,
        "font": "Sora",
        "fontSize": 12,
        "fontWeight": "bold",
        "fill": "#454444"
      },
      "encoding": {
        "longitude": {"field": "lon"},
        "latitude": {"field": "lat"},
        "text": {"field": "label"}
      }
    },
    {
      "data": {
        "values": [
          {
            "lon1": 101.7,
            "lat1": 3.35,
            "lon2": 105,
            "lat2": 4
          }
        ]
      },
      "mark": {
        "type": "rule",
        "color": "#454444",
        "strokeWidth": 1.5
      },
      "encoding": {
        "longitude": {"field": "lon1"},
        "latitude": {"field": "lat1"},
        "longitude2": {"field": "lon2"},
        "latitude2": {"field": "lat2"}
      }
    },
    {
      "data": {
        "values": [
          {
            "lon": 110.5,
            "lat": 8,
            "label": "Lower income,\nlimited infrastructure access"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": 0,
        "font": "Sora",
        "fontSize": 12,
        "fontWeight": "bold",
        "fill": "#454444"
      },
      "encoding": {
        "longitude": {"field": "lon"},
        "latitude": {"field": "lat"},
        "text": {"field": "label"}
      }
    },
    {
      "data": {
        "values": [
          {
            "lon1": 116.2,
            "lat1": 6.0,
            "lon2": 115.3,
            "lat2": 7.6
          }
        ]
      },
      "mark": {
        "type": "rule",
        "color": "#454444",
        "strokeWidth": 1.5
      },
      "encoding": {
        "longitude": {"field": "lon1"},
        "latitude": {"field": "lat1"},
        "longitude2": {"field": "lon2"},
        "latitude2": {"field": "lat2"}
      }
    }
  ]
}
