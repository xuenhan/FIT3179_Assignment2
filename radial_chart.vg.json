{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 275,
    "height": 400,
    "title": {
        "text": "Expenditure Breakdown by Category (2022)",
        "font": "Bree Serif",
        "fontSize": 18,
        "anchor": "middle",
        "dy": -10
    },
    "data": {
        "url": "https://raw.githubusercontent.com/xuenhan/FIT3179_Assignment2/main/datasets/expenditure_category.csv"
    },
    "transform": [
        {"filter": "datum.Year == 2022"},
        {
            "calculate": "datum.Expenditure_Group == 'Food & Beverages' || datum.Expenditure_Group == 'Housing & Utilities' || datum.Expenditure_Group == 'Health' ? 'Basic Needs' : datum.Expenditure_Group == 'Recreation & Culture' || datum.Expenditure_Group == 'Restaurants & Accommodation' || datum.Expenditure_Group == 'Clothing & Footwear' ? 'Lifestyle' : datum.Expenditure_Group == 'Education' || datum.Expenditure_Group == 'Info & Communication' ? 'Education & Communication' : datum.Expenditure_Group == 'Insurance & Finance' || datum.Expenditure_Group == 'Personal Care & Others' ? 'Finance & Insurance' : 'Transport & Miscellaneous'",
            "as": "Category_Group"
        },
        {
            "aggregate": [{"op": "sum", "field": "Value", "as": "Total_Value"}],
            "groupby": ["Category_Group"]
        }
    ],
    "config": {
        "view": {"stroke": null},
        "legend": {
        "titleFont": "Bree Serif",
        "titleFontSize": 12,
        "labelFont": "Sora",
        "labelFontSize": 10,
        "labelColor": "#333"
        },
        "title": {
        "font": "Bree Serif",
        "color": "#333"
        },
        "axis": {
        "labelFont": "Sora",
        "titleFont": "Bree Serif"
        }
    },
    "layer": [
        {   
            "params": [
                {
                    "name": "highlight",
                    "select": {"type": "point", "fields": ["Expenditure_Group"]},
                    "bind": "legend"
                }
            ],
            "mark": {"type": "arc", "innerRadius": 60, "outerRadius": 130, "stroke": "#ffffff", "strokeWidth": 1},
            "encoding": {
                "theta": {
                    "field": "Total_Value",
                    "type": "quantitative",
                    "stack": true,
                    "title": "Expenditure Share (%)"
                },
                "color": {
                    "field": "Category_Group",
                    "type": "nominal",
                    "legend": {"title": "Expenditure Category"},
                    "scale": {
                       "range": ["#C5BAFF", "#FED2E2", "#C4D9FF", "#A19AD3", "#80C4E9"]

                    }
                },
                "opacity": {
                    "condition": {"param": "highlight", "value": 1},
                    "value": 0.3
                },
                "tooltip": [
                    { "field": "Category_Group", "title": "Category" },
                    { "field": "Total_Value", "title": "Share (%)", "format": ".1f" }
                ]
            }
        }
    ]
}
