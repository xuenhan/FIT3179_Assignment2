{
    "$schema" : "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 760,
    "height": 400,
    "params": [
        {
            "name": "selected_state",
            "value": "Selangor",
            "bind": {
                "input": "select",
                "options": [
                    "Johor", "Kedah", "Kelantan", "Selangor", "Pulau Pinang", "Perak", "Pahang", "Terengganu", "Negeri Sembilan", "Melaka", 
                    "Perlis", "Sabah", "Sarawak", "W.P. Kuala Lumpur", "W.P. Labuan", "W.P. Putrajaya"
                ],
                "name": "Select State: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/xuenhan/FIT3179_Assignment2/main/hh_income_state_normalized_2007.csv"
            },
            "transform": [
                {"filter": "datum.state == selected_state"},
                {"filter": "toNumber(datum.year) >= 2007"},
                {"calculate": "'Mean Income'", "as": "Category"}
            ],
            "mark": {"type": "line", "color": "steelblue"},
            "encoding": {
                "x": {"field": "year", "type": "ordinal", "title": "Year"},
                "y": {"field": "income_mean", "type": "quantitative"},
                "color": {
                    "field": "Category",
                    "type": "nominal",
                    "scale": {
                    "domain": ["Mean Income", "Poverty Rate"],
                    "range": ["steelblue", "#8753d1"]
                    },
                    "legend": {
                    "title": "Indicator",
                    "orient": "right",
                    "direction": "vertical",
                    "titleFont": "Bree Serif",
                    "titleFontSize": 14,
                    "labelFont": "Sora",
                    "labelFontSize": 13,
                    "symbolSize": 200,
                    "symbolStrokeWidth": 2
                    }
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/xuenhan/FIT3179_Assignment2/main/hh_poverty_state_normalized_2007.csv"
            },
            "transform": [
                {"filter": "datum.state == selected_state"},
                {"filter": "toNumber(datum.year) >= 2007"},
                {"calculate": "'Poverty Rate'", "as": "Category"}
            ],
            "mark": {"type": "line", "color": "#8753d1"},
            "encoding": {
                "x": {"field": "year", "type": "ordinal"},
                "y": {"field": "poverty_absolute", "type": "quantitative","title": "Scaled Income and Poverty Rate"}
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/xuenhan/FIT3179_Assignment2/main/hh_income_state_normalized_2007.csv"
            },
            "transform": [
                {"filter": "datum.state == selected_state"}
            ],
            "mark": {"type": "point", "color": "steelblue", "size":80, "opacity": 0},
            "encoding": {
                "x": {"field": "year", "type": "ordinal"},
                "y": {"field": "income_mean", "type": "quantitative"},
                "tooltip": [
                {"field": "year", "type": "ordinal", "title": "Year"},
                {"field": "income_mean", "type": "quantitative", "title": "Income (RM)", "format": ".2f"}
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/xuenhan/FIT3179_Assignment2/main/hh_poverty_state_normalized_2007.csv"
            },
            "transform": [
                {"filter": "datum.state == selected_state"}
            ],
            "mark": {"type": "point", "color": "#537D5D", "size":80, "opacity": 0},
            "encoding": {
                "x": {"field": "year", "type": "ordinal"},
                "y": {"field": "poverty_absolute", "type": "quantitative"},
                "tooltip": [
                {"field": "year", "type": "ordinal", "title": "Year"},
                {"field": "poverty_absolute", "type": "quantitative", "title": "Poverty Rate (%)", "format": ".2f"}
                ]
            }
        },
        {
        "data" : {"values": [{"year": "2020"}]},
        "mark": {"type": "rule", "color": "gray", "strokeDash": [4, 4]},
        "encoding" : {
            "x": {"datum": "2020"}
            }
        },
        {
        "data" : {"values": [{"year": "2016"}]},
        "mark": {"type": "rule", "color": "gray", "strokeDash": [4, 4]},
        "encoding" : {
            "x": {"datum": "2016"}
            }
        },
        {
            "data" : {"values": [{"year": "2016", "y": 0.95}]},
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": 0,
                "font": "Arial",
                "fontSize": 12,
                "color": "gray"
            },
            "encoding" : {
                "x": {"datum": "2016"},
                "y": {"datum": 0.95},
                "text": {"value": "GST Implementation & Inflation"}
            }
        },
        {
            "data" : {"values": [{"year": "2020", "y": 0.95}]},
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": 0,
                "font": "Arial",
                "fontSize": 12,
                "color": "gray"
            },
            "encoding" : {
                "x": {"datum": "2020"},
                "y": {"datum": 0.95},
                "text": {"value": "COVID-19 Impact"}
            }
        }    
    ]
}